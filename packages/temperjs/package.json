{
  "name": "temperjs",
  "private": false,
  "version": "1.0.0",
  "description": "State management for React, made simple.",
  "homepage": "https://temperjs.org",
  "repository": "github:ktripaldi/temperjs",
  "bugs": "https://github.com/ktripaldi/temperjs/issues",
  "keywords": [
    "temper",
    "temperjs",
    "state",
    "trait",
    "react",
    "reactjs",
    "recoil",
    "redux",
    "flux"
  ],
  "main": "lib/temper.js",
  "unpkg": "dist/temper.js",
  "module": "es/temper.js",
  "types": "types/index.d.ts",
  "files": [
    "dist",
    "lib",
    "es",
    "types"
  ],
  "scripts": {
    "clean": "rimraf lib dist es coverage types",
    "check-types": "tsc --noEmit",
    "build": "rollup -c",
    "build:watch": "yarn run build --watch",
    "test": "jest --config jestconfig.json --silent",
    "test:watch": "yarn run test --watchAll",
    "test:cov": "yarn run test --coverage",
    "test:staged": "cross-env CI=true yarn run test --findRelatedTests",
    "format": "prettier --write \"src/**/*.ts\" \"**/*.md\"",
    "lint": "eslint --ext ts src"
  },
  "peerDependencies": {
    "react": "17.0.1"
  },
  "dependencies": {
    "temperjs-store": "1.0.0"
  },
  "devDependencies": {
    "@babel/core": "7.12.10",
    "@babel/plugin-proposal-object-rest-spread": "7.12.1",
    "@babel/preset-env": "7.12.11",
    "@babel/preset-typescript": "7.12.7",
    "@babel/register": "7.12.10",
    "@rollup/plugin-babel": "5.2.2",
    "@rollup/plugin-node-resolve": "^11.0.1",
    "@rollup/plugin-replace": "2.3.4",
    "@testing-library/jest-dom": "5.11.6",
    "@testing-library/react-hooks": "3.7.0",
    "@types/jest": "26.0.19",
    "@types/react": "17.0.0",
    "@typescript-eslint/eslint-plugin": "4.11.0",
    "@typescript-eslint/parser": "4.11.0",
    "babel-eslint": "10.1.0",
    "babel-jest": "26.6.3",
    "cross-env": "7.0.3",
    "eslint": "7.16.0",
    "eslint-import-resolver-typescript": "2.3.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-react": "7.21.5",
    "eslint-plugin-react-hooks": "4.2.0",
    "husky": "4.3.6",
    "jest": "26.6.0",
    "lint-staged": "10.5.3",
    "prettier": "2.2.1",
    "react": "17.0.1",
    "react-test-renderer": "17.0.1",
    "rimraf": "3.0.2",
    "rollup": "2.35.1",
    "rollup-plugin-terser": "7.0.2",
    "rollup-plugin-typescript2": "0.29.0",
    "ts-jest": "26.4.4",
    "typescript": "4.1.3"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "yarn test:staged"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "author": "Kenderson Tripaldi",
  "maintainers": [
    {
      "name": "Kenderson Tripaldi",
      "email": "temperjs@icloud.com"
    }
  ],
  "license": "MIT"
}
